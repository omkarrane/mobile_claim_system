@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <div id="carousel-example-generic" class="carousel slide">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-responsive img-full" src="~/img/m2.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="~/img/m3.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="~/img/m5.jpg" alt="">
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="icon-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="icon-next"></span>
                    </a>
                </div>
                <h2>
                    <small>Welcome to </small>
                </h2>
                <h1>
                    <span class="brand-name">MOBI-GO ON CALL</span>
                </h1>
                <hr class="tagline-divider">
                <h2>
                    <small>By <strong>MMS249-T3</strong></small>
                </h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    WHY REPAIR ONLY AT  <strong>MOBI-GO</strong>
                </h2>
                <hr>
                <img class="img-responsive img-border img-left" src="~/img/editlogo.jpg" alt="">
                <hr class="visible-xs">
                <p>
                    Quick & Easy

                    Easy Repair Process. Book a time, Bring in your device, Pick it up professionally repaired device after 30 minutes*<a>CELL PHONE REPAIR CENTRE </a> Real Genuine Spares

                    Unlike local repair shops, Fonecare uses 100% Genuine quality spares parts.
                </p>
                <p>
                    Fast Repairs

                    Apart from our Exclusive '30 Minute Repair' Services, our Regular Repairs are also quite fast & time bound.
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    BRANDS
                    <strong>WE REPAIR </strong>
                </h2>
                <hr>
                <p>We repair almost every brand. From Apple,Samsung,Micromax,Gionee to smaller brands. Almost every brand </p>
                <p>

                    FRANCHISE-- Today mobiles have now become a necessity in India.The demand for Quality Mobile Device Repair Service is growing exponentially. This is where you come in.We have spent years perfecting our repair processes.When opening a Fonecare Franchise, you will become known as a Mobile Devices Repair leader in your area
                </p>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    <script>
    // Activates the Carousel
    $('.carousel').carousel({
        interval: 5000
    })
    </script>
}